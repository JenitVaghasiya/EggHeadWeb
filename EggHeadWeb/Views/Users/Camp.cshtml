@using EggheadWeb.Common;
@using EggheadWeb.Utility;
@model EggheadWeb.Models.Common.Camp
<div class="sch_main">
    <div class="sch_left">
        <strong>@Model.Location.Name</strong>
    </div>
</div>
<div class="sch_main enrl_txt3">
    <strong>@Model.OnlineName</strong>
    @if (Model.MaxEnroll <= (Model.Enrolled.HasValue ? Model.Enrolled.Value : 0))
    {
        @:(
        <strong style="color: Red;">Camp Full</strong>
        @:)
        }
</div>
<div class="sch_main enrl_txt3">
    <strong>Enrollment Fees:</strong> $ @Model.Cost
</div>
<div class="sch_main enrl_txt3">
    <strong>Day and Time:</strong> @ScheduleUtil.GetDaysOfService(Model) - @Model.TimeStart.To12HoursString()
    -@Model.TimeEnd.To12HoursString()
</div>
<div class="sch_main enrl_txt3">
    <strong>Dates:</strong> @ScheduleUtil.GetDateListText(Model)
</div>
<div class="sch_main enrl_txt3">
    <strong>Grades:</strong> @ScheduleUtil.GetGradeListText(Model)
</div>
<br />
<div class="sch_main1 enrl_txt4">
    @Html.Raw(@Model.OnlineDescription)
</div>
<br />
<div class="sch_main1 enrl_txt4">
    @Html.Raw(@Model.Notes)
</div>
