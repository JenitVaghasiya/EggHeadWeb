@using EggheadWeb.Models.Common;
@using EggHeadWeb.DatabaseContext;
@{
    var admin = this.Session["CurrentAdmin"] as Admin;

}
<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/style_new.css")" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/Content/skeleton.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/style-custom_new.css")" type="text/css" media="all" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/trippleddlAdapters.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/customForUserPage.js")" type="text/javascript"></script>
</head>
<body>
    <div id="body-content" class="container">
        <header>
            <div id="logo">
                <a href="#">
                    <img src="../../Content/images/logo.png" alt="" title="" />
                </a>
            </div>

            <div id="right-control">
                @if (Request.IsAuthenticated)
                {
                    <a href="@Url.Action("Logout")">Logout</a> <br />
                }
                <div class="yellow-text">GIVE US A CALL:</div>
                <div class="phone-number">@admin.PhoneNumber</div>
            </div>
            <div class="clear"></div>

            <div class="box-top-nav">
                @Html.Partial("_UserMainMenu")
            </div>
        </header>
        <div class="clear">
        </div>
        <div id="content">
            <article>
                @RenderBody()
            </article>
        </div>
        <div id="content-bottom">
        </div>
        <footer>
            <div id="left">
                <span style=" font-family: arial;font-size: 12px;line-height: 25px;">© 2012 Professor Egghead Science Academy</span>
            </div>

            <div id="right">
                <span style="font-size: 25px;color:#fff;line-height:40px;">Connect with  us:</span> <br />
                <a href="http://twitter.com/profegghead"><img src="../../Content/images/skype.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="http://facebook.com/professoregghead"><img src="../../Content/images/facebook.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="http://youtube.com/professoregghead"><img src="../../Content/images/youtube.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
        </footer>
        <div class="clear">
        </div>
    </div>
</body>
</html>
