@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
</head>
<body>
    <h2>
        Sorry, an error occurred while processing your request.</h2>

    @if (Model != null)
    {
        <h3>@Model.Exception.GetType().Name</h3>
        <pre>
        @Model.Exception.ToString()</pre>
        <p>
            thrown in @Model.ControllerName @Model.ActionName</p>
    }
</body>
</html>
